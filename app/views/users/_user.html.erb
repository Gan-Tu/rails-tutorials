<li>
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.name, user %>
  <!-- We allow admins to delete users -->
  <% if current_user.admin? && user != current_user %>
    | <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "Do you want to delete: #{user.name.upcase}?" } %>
  <% end %>
  <!-- We will only show unactivated users only to admins, with a message -->
  <% if current_user.admin? && !user.activated? %>
    <br>
    <i> User account is not activated </i>
  <% end %>
</li>